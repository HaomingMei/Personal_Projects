#include <cmath>
class Solution {
public:
    bool isPowerOfThree(int n) {
        if(n==1){
            return true;
        }
        if(n<=0 || n%3!= 0){
            return false;
        }
        if( static_cast<int>(std::pow(3,19))%n == 0){
            return true;
        }
        return false;
        
        
    }
};